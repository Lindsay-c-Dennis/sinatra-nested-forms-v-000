<h1>Display your Pirate here</h1>
  <div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h1>Ships:</h1>
<% Ships.each do |ship| %>
  <div class="ship">
    <%= Ship.all.each do |ship| %>
      <h3>Name: <%=ship.name%></h3><br>
      <h3>Type: <%=ship.type%></h3><br>
      <h3>Booty: <%=ship.booty%></h3><br>
      <% end %>
  </div><br>