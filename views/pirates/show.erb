  <div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>

<h2>Display your first ship here</h2>
  <div class="ship">
    <p>Name: <%= Ship.first.name %></p><br>
    <p>Type: <%= Ship.first.type %></p><br>
    <p>Booty: <%= Ship.first.booty %></p><br>
  </div><br>

